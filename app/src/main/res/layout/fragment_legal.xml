<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_main_background_color"
    tools:context="com.ronnyml.sweetplayer.fragments.LegalFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_main_background_color"
            android:orientation="vertical"
            tools:context="com.ronnyml.sweetplayer.fragments.LegalFragment">

                <TextView
                    android:id="@+id/legal_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/drawer_text_color"
                    android:layout_marginLeft="@dimen/legal_margin"
                    android:layout_marginRight="@dimen/legal_margin"
                    android:layout_marginTop="@dimen/legal_margin"
                    android:padding="@dimen/legal_padding"
                    android:text="@string/legal_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/legal_title_color"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/content_view_divider_size"
                    android:background="@color/content_title_divider_color"
                    android:layout_marginLeft="@dimen/legal_margin"
                    android:layout_marginRight="@dimen/legal_margin" />

                <TextView
                    android:id="@+id/legal_description_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/drawer_text_color"
                    android:layout_marginBottom="@dimen/legal_margin"
                    android:layout_marginLeft="@dimen/legal_margin"
                    android:layout_marginRight="@dimen/legal_margin"
                    android:padding="@dimen/legal_padding"
                    android:text="@string/legal_description"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/legal_description_color" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
